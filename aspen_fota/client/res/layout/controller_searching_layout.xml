<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/miac_controller_new_layout_width"
    android:layout_height="@dimen/miac_controller_new_layout_height">

    <RelativeLayout
        android:layout_width="@dimen/miac_controller_new_layout_width"
        android:layout_height="@dimen/miac_controller_new_layout_height"
        android:background="@drawable/mvr_setting_panel_bg"
        android:paddingBottom="@dimen/miac_controller_new_layout_padding"
        android:paddingLeft="@dimen/miac_controller_new_layout_padding_small"
        android:paddingRight="@dimen/miac_controller_new_layout_padding_small"
        android:paddingTop="@dimen/miac_controller_new_layout_padding">

        <ImageView
            android:id="@+id/disconnect_imageview"
            android:layout_width="@dimen/miac_controller_new_icon_searching_width"
            android:layout_height="@dimen/miac_controller_new_icon_searching_height"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/miac_controller_new_icon_searching_margin_bottom"
            android:layout_marginTop="@dimen/miac_controller_new_icon_searching_margin_top"
            android:src="@drawable/recenter_0008" />

        <RelativeLayout
            android:id="@+id/warning_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disconnect_imageview"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/warning_text"
                style="@style/miac_controller_new_description_text_style_12"
                android:layout_width="@dimen/miac_controller_new_title_width"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center_horizontal"
                android:text="@string/pair_controller_description_new" />
        </RelativeLayout>

        <TextView
            android:id="@+id/disconnect_description"
            style="@style/miac_controller_new_tips_text_style_9_alpha"
            android:layout_width="@dimen/miac_controller_new_title_width_big"
            android:layout_height="wrap_content"
            android:layout_below="@+id/warning_group"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/miac_controller_new_tips_searching_margin"
            android:gravity="center_horizontal"
            android:text="@string/pair_controller_pair_new" />

    </RelativeLayout>

</RelativeLayout>